<div class="col-xs-12 col-md-3">
  <div class="thumbnail product-column">
    <% cache product do %>

      <a href="<%= product_path(product) %>">

        <h4><%=product.name%></h4>

        <%= image_tag(product.image_url, class: "product_index_pics") %>
      </a>

      <div class="rated stars" data-score="<%=	product.average_rating  %>"></div>


      <p><%=product.description%></p>

      <p><strong>Price: </strong><%= (product.price/100).to_d %>$</p>



    <% end %>

    <div class="buttons">

      <!--<%#= link_to 'Show', product, :class => 'btn btn-default' %>-->


    </div>
  </div>

</div>

