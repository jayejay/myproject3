<p id="notice"><%= notice %></p>

<h1>Software-Products</h1>

<div class="container">
  <div class="row products-row">
    <% @products.each do |product| %>
      <div class="col-xs-12 col-md-3">
        <h4><%=product.name%></h4>

        <p><%=product.description%></p>

        <p><strong>Available Mediums:</strong> <%=product.mediums%></p>

        <%= image_tag(product.image_url, class: "img-responsive") %>
        <p><strong>Price: </strong><%= product.price %>$</p>
        <%= link_to 'Show', product, :class => 'btn btn-success' %>
        <%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-warning' %>
        <%= link_to 'Destroy', product, :class => 'btn btn-danger', method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>
</div>
<br>

<%= link_to 'New Product', new_product_path, :class => 'btn btn-default' %>

